{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "forin": false,
        "interface-name": [
            false
        ],
        "no-console": [
            false
        ],
        "no-namespace": [
            true,
            "allow-declarations"
        ],
        "trailing-comma": [
            true,
            "never"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    }
}
